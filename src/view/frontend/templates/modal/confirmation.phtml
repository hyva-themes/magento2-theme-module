use Hyva\Theme\Model\ViewModelRegistry;
use Magento\Framework\Escaper;
use Magento\Framework\View\Element\Template;

/** @var Template $block */
/** @var Escaper $escaper */
/** @var ViewModelRegistry $viewModels */

/**
 * This is the default modal confirmation dialog template
 * @see \Hyva\Theme\Model\Modal\ConfirmationBuilderInterface
 */

?>
<?php if ($block->hasData('title')): ?>
    <div class="font-bold text-xl"><?= $escaper->escapeHtml($block->getData('title')) ?></div>
<?php endif; ?>
<?php if ($block->hasData('message')): ?>
    <div class="">
        <?= $escaper->escapeHtml($block->getData('message')) ?>
    </div>
<?php endif; ?>
<div class="<?php
if ($block->hasData('message') || $block->hasData('title')) {
    echo 'mt-10 ';
}
?>flex justify-between gap-2">
    <button @click="dismiss" type="button" class="btn">
        <?= $escaper->escapeHtml($block->getData('cancel') ?: __('Cancel')) ?>
    </button>
    <button x-focus-first @click="confirm" type="button" class="btn btn-primary">
        <?= $escaper->escapeHtml($block->getData('ok') ?: __('OK')) ?>
    </button>
</div>
