<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="background">
        <field name="background_lazy_load" sortOrder="17" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <!-- Default to 'false' for backward compatibility. -->
                    <!-- Using true would break background images for all sites that didn't upgrade the default-theme and -->
                    <!-- are missing the JS to lazy-load the background images. -->
                    <item name="default" xsi:type="string">false</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <visible>true</visible>
                <dataType>text</dataType>
                <label translate="true">Lazy Load</label>
                <notice translate="true">[Hyvä only] Delay loading the image until it is within the viewport.</notice>
                <dataScope>background_lazy_load</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="string">false</map>
                            <map name="true" xsi:type="string">true</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
    </fieldset>
</form>
