<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="layout_load_before">
        <observer name="hyva_theme_add_layout_handles"
                  instance="Hyva\Theme\Observer\AddLayoutHandles"/>
    </event>
    <event name="catalog_controller_product_init_after">
        <observer name="hyva_theme_register_current_product"
                  instance="Hyva\Theme\Observer\RegisterCurrentProduct"/>
    </event>
</config>
